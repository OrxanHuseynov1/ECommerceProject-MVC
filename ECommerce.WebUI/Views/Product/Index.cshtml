@model ProductListViewModel

@section CategorySection {
    <div class="col-md-2">
        @await Component.InvokeAsync("CategoryList")
    </div>
}

<p>
    <a class="btn btn-outline-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>
                    <a class="btn btn-xs btn-success">Add To Cart</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<product-list-pager current-page="@Model.CurrentPage"
                    current-category="@Model.CurrentCategory"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize"
                    current-type="@Model.GetType().Name">
</product-list-pager>
